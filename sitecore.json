{
  "$schema": "./.sitecore/schemas/RootConfigurationFile.schema.json",
  "modules": [
    "src/*.module.json"
  ],
  "plugins": [
    "Sitecore.DevEx.Extensibility.Serialization@6.1.4",
    "Sitecore.DevEx.Extensibility.Publishing@6.1.4",
    "Sitecore.DevEx.Extensibility.Indexing@6.1.4",
    "Sitecore.DevEx.Extensibility.ResourcePackage@6.1.4",
    "Sitecore.DevEx.Extensibility.XMCloud@1.1.110"
  ],
  "serialization": {
    "defaultMaxRelativeItemPathLength": 100,
    "defaultModuleRelativeSerializationPath": "items",
    "removeOrphansForRoles": true,
    "continueOnItemFailure": false,
    "excludedFields": []
  }
}
